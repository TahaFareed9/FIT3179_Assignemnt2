
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "vconcat": [
        {
            "title": "Klang Valley",
            "width": 800,
            "height": 100,
            "data": {
                "url": "daily_blood_donations.csv"
            },
            "transform": [
                {
                    "filter": {
                        "field": "state",
                        "equal": "Klang Valley"
                    }
                }
            ],
            "mark": "area",
            "encoding": {
                "x": {
                    "field": "date",
                    "type": "temporal",
                    "title": "Time",
                    "axis": {"grid": false}
                },
                "y": {
                    "field": "donations",
                    "type": "quantitative",
                    "title": "Blood Donations",
                    "axis": {"grid": false}
                },
                "color": {
                    "field": "state",
                    "type": "nominal",
                    "legend": null
                },
                "tooltip": [
                    {"field": "state", "type": "nominal", "title": "State"},
                    {"field": "date", "type": "temporal", "title": "Date"},
                    {"field": "donations", "type": "quantitative", "title": "Donations"}
                ]
